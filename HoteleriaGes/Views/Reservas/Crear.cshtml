@model List<HoteleriaGes.Models.Habitacion>
@{
    ViewData["Title"] = "Reservar Habitación";
}
<style>
    body {
        background: linear-gradient(135deg, #e0eafc 0%, #cfdef3 100%);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    .reserva-container {
        max-width: 900px;
        margin: 40px auto;
        background: #fff;
        border-radius: 20px;
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.2);
        padding: 40px 30px;
    }
    .reserva-container h2 {
        color: #2980b9;
        text-align: center;
        margin-bottom: 30px;
    }
    .habitaciones-table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 30px;
    }
    .habitaciones-table th, .habitaciones-table td {
        padding: 12px;
        border-bottom: 1px solid #ddd;
        text-align: center;
    }
    .habitaciones-table th {
        background: #2980b9;
        color: #fff;
    }
    .habitaciones-table tr:hover {
        background: #f2f6fc;
    }
    .btn-reservar {
        background: #e67e22;
        color: #fff;
        border: none;
        border-radius: 5px;
        padding: 8px 16px;
        cursor: pointer;
        transition: background 0.3s;
    }
    .btn-reservar:hover {
        background: #d35400;
    }
</style>
<div class="reserva-container">
    <h2>Reservar Habitación</h2>
    <form method="get" action="/Reservas/Crear">
        <label for="hotelId"><b>Selecciona un hotel:</b></label>
        <select name="hotelId" id="hotelId" onchange="this.form.submit()" style="margin-bottom:20px;">
            <option value="">-- Selecciona --</option>
            @foreach (var hotel in ViewBag.Hoteles as List<HoteleriaGes.Models.Hotel>)
            {
                if (ViewBag.HotelSeleccionadoId == hotel.Id)
                {
                    <option value="@hotel.Id" selected>@hotel.Nombre</option>
                }
                else
                {
                    <option value="@hotel.Id">@hotel.Nombre</option>
                }
            }
        </select>
    </form>
    @if (ViewBag.HotelSeleccionado != null)
    {
        var hotel = ViewBag.HotelSeleccionado as HoteleriaGes.Models.Hotel;
        <div class="alert alert-info" style="margin-bottom:20px;">
            <strong>Hotel Seleccionado:</strong><br />
            <b>@hotel.Nombre</b><br />
            @hotel.Direccion<br />
            Rating: @hotel.Rating<br />
            Ciudad: @hotel.Ciudad<br />
            @if (!string.IsNullOrEmpty(hotel.ImagenUrl))
            {
                <img src="@hotel.ImagenUrl" alt="Imagen del hotel" style="max-width:200px; margin-top:10px;" />
            }
        </div>
    }
    <table class="habitaciones-table">
        <thead>
            <tr>
                <th>Número</th>
                <th>Tipo</th>
                <th>Precio</th>
                <th>Días</th>
                <th>Acción</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var h in Model)
            {
                <tr>
                    <form method="post" action="/Reservas/Seleccionar">
                        <td>@h.Numero</td>
                        <td>@h.Tipo</td>
                        <td>$@h.Precio</td>
                        <td>
                            <input type="hidden" name="habitacionId" value="@h.Id" />
                            <input type="number" name="dias" min="1" value="1" required style="width:70px;" />
                        </td>
                        <td>
                            <button type="submit" class="btn-reservar">Seleccionar</button>
                        </td>
                    </form>
                </tr>
            }
        </tbody>
    </table>
</div>
