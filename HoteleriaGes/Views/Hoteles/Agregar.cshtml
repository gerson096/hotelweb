@model IEnumerable<HoteleriaGes.Models.Hotel>
@{
    ViewData["Title"] = "Agregar Hotel";
}

<style>
    body {
        background: linear-gradient(135deg, #e0eafc 0%, #cfdef3 100%);
    }
    .hotel-list {
        display: flex;
        flex-wrap: wrap;
        gap: 32px;
        justify-content: center;
        margin-top: 32px;
    }
    .hotel-card {
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 4px 16px rgba(31,38,135,0.15);
        width: 320px;
        overflow: hidden;
        display: flex;
        flex-direction: column;
        align-items: stretch;
        transition: box-shadow 0.3s;
    }
    .hotel-card:hover {
        box-shadow: 0 8px 32px rgba(31,38,135,0.25);
    }
    .hotel-img {
        width: 100%;
        height: 180px;
        object-fit: cover;
        background: #e0eafc;
    }
    .hotel-info {
        padding: 20px;
    }
    .hotel-title {
        font-size: 1.3rem;
        font-weight: bold;
        color: #2980b9;
        margin-bottom: 8px;
    }
    .hotel-rating {
        color: #e67e22;
        font-weight: bold;
        margin-bottom: 8px;
    }
    .hotel-desc {
        color: #34495e;
        font-size: 0.95rem;
        margin-bottom: 12px;
    }
    .hotel-btn {
        background: #1abc9c;
        color: #fff;
        border: none;
        border-radius: 6px;
        padding: 10px 18px;
        font-size: 1rem;
        cursor: pointer;
        transition: background 0.3s;
        width: 100%;
    }
    .hotel-btn:hover {
        background: #16a085;
    }
</style>

<h2 style="margin-top:32px; color:#2980b9; text-align:center;">Hoteles Disponibles</h2>
<div class="hotel-list">
    @if (Model != null && Model.Any())
    {
        foreach (var hotel in Model)
        {
            <div class="hotel-card">
                @if (!string.IsNullOrEmpty(hotel.ImagenUrl))
                {
                    <img src="@hotel.ImagenUrl" class="hotel-img" alt="Imagen del hotel" />
                }
                else
                {
                    <div class="hotel-img" style="display:flex;align-items:center;justify-content:center;color:#aaa;">Sin imagen</div>
                }
                <div class="hotel-info">
                    <div class="hotel-title">@hotel.Nombre</div>
                    <div class="hotel-rating">⭐ @hotel.Rating</div>
                    <div class="hotel-desc">@hotel.Descripcion</div>
                    <div style="font-size:0.95rem; margin-bottom:8px;"><b>Dirección:</b> @hotel.Direccion</div>
                    <div style="font-size:0.95rem; margin-bottom:8px;"><b>Ciudad:</b> @hotel.Ciudad</div>
                    <form asp-action="Agregar" method="post">
                        <input type="hidden" name="Nombre" value="@hotel.Nombre" />
                        <input type="hidden" name="Direccion" value="@hotel.Direccion" />
                        <input type="hidden" name="Ciudad" value="@hotel.Ciudad" />
                        <input type="hidden" name="Rating" value="@hotel.Rating" />
                        <input type="hidden" name="ImagenUrl" value="@hotel.ImagenUrl" />
                        <input type="hidden" name="Descripcion" value="@hotel.Descripcion" />
                        <button type="submit" class="hotel-btn">Seleccionar y Administrar</button>
                    </form>
                </div>
            </div>
        }
    }
    else
    {
        <div style="text-align:center; color:#e74c3c; font-size:1.2rem;">No hay hoteles disponibles.</div>
    }
</div>
